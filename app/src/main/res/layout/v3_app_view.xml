<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/v3_app_view_channel_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:ignore="KeyboardInaccessibleWidget" />

        <TextView
            android:id="@+id/v3_app_view_user_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3_app_view_channel_info_tv"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:ignore="KeyboardInaccessibleWidget,RelativeOverlap" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/v3_app_view_function_views_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:padding="0dp"
        android:scrollbarSize="1dp"
        android:scrollbarThumbVertical="@android:color/holo_purple"
        android:scrollbars="vertical" />

</LinearLayout>